{
    "env": {
        "node": true,
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "brace-style": [
            "error",
            "1tbs",
            {
                "allowSingleLine": false
            }
        ],
        // "padding-line-between-statements": [
        //     "error",
        //     {
        //         "blankLine": "always",
        //         "prev": [
        //             "const",
        //             "let",
        //             "var"
        //         ],
        //         "next": "*"
        //     },
        //     {
        //         "blankLine": "any",
        //         "prev": [
        //             "const",
        //             "let",
        //             "var"
        //         ],
        //         "next": [
        //             "const",
        //             "let",
        //             "var"
        //         ]
        //     }
        // ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 1
            }
        ],
        "curly": [
            "error",
            "multi-line"
        ],
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}

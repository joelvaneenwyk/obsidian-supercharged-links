{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2017",
    "allowJs": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "outDir": "./dist",
    "paths": {
      "cssBuilder/*": [
        "./src/cssBuilder/*"
      ],
      "linkAttributes/*": [
        "./src/linkAttributes/*"
      ],
      "plugin/*": [
        "./src/plugin/*"
      ],
      "settings/*": [
        "./src/settings/*"
      ]
    },
    "typeRoots": [
      "typings"
    ],
    "lib": [
      "dom",
      "es5",
      "es6",
      "scripthost",
      "es2020"
    ]
  },
  "include": [
    "typings/*.d.ts",
    "src/main.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.js"
  ]
}

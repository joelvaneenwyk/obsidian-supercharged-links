{
  "compilerOptions": {
    // "noImplicitReturns": true,
    // "noUnusedLocals": true,
    // "strict": true,
    // "preserveConstEnums": true,
    // "stripInternal": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2017",
    "allowJs": true,
    // "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "paths": {
      "cssBuilder/*": [
        "./src/cssBuilder/*"
      ],
      "linkAttributes/*": [
        "./src/linkAttributes/*"
      ],
      "plugin/*": [
        "./src/plugin/*"
      ],
      "settings/*": [
        "./src/settings/*"
      ]
    },
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2020"
    ]
  },
  "include": [
    "main.ts",
    "src/**/*.ts"
  ]
}
